.players-main {
  display: flex;
  flex-flow: row wrap;

  .badge {
    width: 100%;
    height: 300px;
    margin-bottom: 10px;

    img {
      width: 100%;
      height: 100%;
      border-radius: 8px;
    }
  }

  .badge:nth-child(4n + 4) {
    margin-right: 0;
  }

  @media only screen and (min-width: 600px) {
    .badge {
      width: 300px;
    }
  } 
}