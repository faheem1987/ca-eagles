.schedule-wrapper {
  display: flex;
  flex-flow: column;
  color: #424242;
  font-size: 18px;

  .schedule {
    display: flex;
    flex-flow: column;
    background: #333;
    margin-bottom: 10px;
    color: #fff;
    text-align: center;

    .match-date {
      background: #fff;
      padding: 20px;
      color: #424242;
      width: 100%;

      @media only screen and (min-width: 600px) {
        width: 170px;
      } 
    }

    .oponent {
      flex: 1;
      padding: 20px;
      font-size: 24px;

      .venue {
        font-size: 14px;
      }
    }

    .team-initials {
      padding: 20px;
      font-size: 18px;
      img,
      .oponent-initial {
        width: 62px;
        height: 62px;
        border-radius: 50%;
        background: #f00;
        display: inline-block;
        vertical-align: middle;
        margin: 0 20px;
      }

      .oponent-initial{
        padding: 17px;
      }
    }

    @media only screen and (min-width: 600px) {
      flex-flow: row nowrap;
    } 
  }
}