.stats {

  .player-team-stats {
    display: flex;
    flex-direction: row wrap;  
  }

  .badges-wrapper {
    background: #ac23cea6
    padding: 20px 30px;
    h3{
      text-align: center;
    }
    display: flex;
    flex-direction: column;
    max-width: 358px;
    width: 100%;
    margin-right: 68px;
    
    .badge img {
      width: 100%;
      height: 200px;
      border-radius: 20px;
    }
  }

  .badges-wrapper:nth-child(3n+3) {
    margin-right: 0 !important;
  }

  .player {
    max-width: 370px;
    width: 100%;
    background: #0f218b;
    border-radius: 20px;
    padding: 20px 40px;
    font-size: 18px;
    list-style: none;
    margin-top: 20px;

    li {
      margin-bottom: 20px;
      img {
        margin-right: 80px;
        border-radius: 50px;  
      }
    }
  }
}