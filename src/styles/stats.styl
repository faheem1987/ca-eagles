.stats {
  font-size: 75%;

  h2 {
    font-size: 180%;
    margin: 40px 0 10px 0;
  }

  h3 {
    font-size: 160%;
    margin: 40px 0 10px 0;
  }

  &-wrapper {
    background: #c31010d1;
  }

  &-content {
    display: flex;
    flex-flow: row wrap;  
  }

  &-b-wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    
    &:nth-child(3n+3) {
      margin-right: 0 !important;
    }

    @media only screen and (min-width: 600px) {
      margin-right: 68px;
      max-width: 358px;
    } 

    h3{
      text-align: left;
    }
    
    .badge img {
      width: 100%;
      height: 300px;
      border-radius: 20px;

      @media only screen and (min-width: 600px) {
        height: 200px;
      } 
    }
  }

  

  &-players,
  &-results {
    width: 100%;
    width: 100%;
    background: #0f218b;
    border-radius: 20px;
    padding: 20px;
    font-size: 18px;
    list-style: none;
    margin-top: 20px;
    height: 280px;
  }

  &-players {
    li {
      display: flex;
      flex-flow: row nowrap;
      margin-bottom: 15px;
      justify-content: space-between;
      img {
        margin-right: 10px;
        border-radius: 50px;  
      }
    }
  }

  &-results {
    font-size: 16px;
    padding: 20px; 

    li {
      margin-bottom: 22px;
    }
  }

  &-m-d {
    font-size: 12px;
    padding: 0 30px;
    margin: -7px 20px;
  }

  .stat-name {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 222px;
    display: inline-block;
  }

  &-w {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 222px;
    display: inline-block;
  }

  &-see-more {
    position: absolute;
    top: 42px;
    right: 13px;
    font-size: 100%; 

    @media only screen and (min-width: 600px) {
      right: 13px;
    } 
  }
}