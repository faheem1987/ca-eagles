.stats {

  .player-team-stats-wrapper {
    background: #c31010d1;
  }

  .player-team-stats {
    display: flex;
    flex-flow: row wrap;  
  }

  .badges-wrapper {
    //background: #ac23cea6
    padding: 20px 30px;
    position: relative;

    h3{
      text-align: left;
    }
    display: flex;
    flex-direction: column;
    max-width: 358px;
    width: 100%;
    margin-right: 68px;
    
    .badge img {
      width: 100%;
      height: 200px;
      border-radius: 20px;
    }
  }

  .badges-wrapper:nth-child(3n+3) {
    margin-right: 0 !important;
  }

  .player,
  .match-result {
    max-width: 370px;
    width: 100%;
    background: #0f218b;
    border-radius: 20px;
    padding: 20px 40px;
    font-size: 18px;
    list-style: none;
    margin-top: 20px;

    li {
      margin-bottom: 10px;
      img {
        margin-right: 20px;
        border-radius: 50px;  
      }
    }
  }

  .match-result {
    font-size: 16px;
    padding: 20px; 
    
    .date-url {
      font-size: 12px;
      padding: 0 30px;
      margin: -10px 20px;

    }
  }

  .winner {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 222px;
    display: inline-block;
  }

  .see-more.results {
    position: absolute;
    top: -2px;
    right: 48px;
    font-size: 12px; 
  }

  .report {
    height: 200px;
  }

  .match-result li {
    margin-bottom: 15px;
  }
}