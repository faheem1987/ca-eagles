body, ul {
  font-family: 'Open Sans', sans-serif;
  padding: 0;
  margin: 0;
  color: #fff;
}

h1,h2,h3,h4,h5,h5 {
  font-family: 'Shadows Into regular', cursive;
  text-transform: uppercase;
}

ul {
  list-style: none;
}

a {
  outline : none;
  text-decoration: none;
  color: #fff;

  &:focus,
  &:hover {
    text-decoration: none;
    color: #fff;
  }
}


li {
  margin: 0;
  padding: 0;
}

.f-icon {
  margin-right: 20px;
}

.fa-thumbs-down {
  color: red;  
}

.fa-thumbs-up {
  color: green;
}

input {
  height: 42px !important;  
}

textarea {
  border: 1px solid #ccc;
  margin-bottom: 20px;
}

label {
  color: #000;
}

.hidden {
  display: none;
}

.see-more{
  cursor: pointer
}

.Dropdown-control {
  border-radius: 20px;
   margin: 10px 0 20px;
}

.react-datepicker__input-container {
  input {
    border-radius: 20px;
  }
}

input.danger {
  border: 1px solid red !important;
}

.danger {
  .Dropdown-control {
    border: 1px solid red !important;
  }
}

input {
  margin: 10px 0;  
}


