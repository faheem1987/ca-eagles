.header {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  // background: rgba(65,16,117,1)
  background: #c31010d1;
  color: #fff;
  padding: 8px 70px 8px;
  font-weight: 400;
  height: 100px;
  width: 100%;
  position: fixed;
  z-index: 1;

  .logo {
    margin-left: 54px;
  }
  img {
    width: 70px;
    height: 60px;
    border-radius: 50%;
  }

  .links-wrapper {
    a {
      padding: 0 20px;
      

      &:after {
        height: 3px;
        display: block;
        width: 30px;
        background: #fff;
        border-right: 1px #fff;
        content: '';
        position: absolute;
        margin: 5px 10px;
        margin: 0 aut0;
        opacity: 0;
      }

      &:hover:after {
        transition: all 1s;
        opacity: 1;
      }
    }

    #basic-nav-dropdown {
      color: #fff !important;
    }

    .dropdown-menu {
      a {
        color: #000
        outline: none;
        display: block;
      }
    }
  }

}