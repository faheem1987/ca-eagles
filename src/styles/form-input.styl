.form-input-custom {
  // margin: 10px 0;

  .input-error {
    color: red;
    font-size: 14px;
    margin-left: 10px;
  }

  input[type='password'] {
    letter-spacing: 0.3em;
  }

  input[type='file'] {
    border: none;
  }

  input {
    border-radius: 20px;
    font-size: 18px;
    padding: 10px 10px 10px 20px;
    color: grey;
    display: block;
    width: 100%;
    border: 1px solid #ccc;

    &:focus {
      outline: none;
    }
  }
}
